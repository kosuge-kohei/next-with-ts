{
    "name": "next-with-ts",
    "version": "0.1.0",
    "description": "next.js with typescript boiler plate",
    "repository": {
        "type": "git",
        "url": "git@github.com:uruha/next-with-ts.git"
    },
    "scripts": {
        "dev": "nodemon",
        "build": "next build && tsc --project tsconfig.server.json",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "type:check": "tsc",
        "lint:check": "eslint . --ext .ts,.tsx",
        "lint:fmt": "eslint . --fix --ext .ts,.tsx",
        "test": "jest",
        "gen": "hygen generate"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint . --ext .ts,.tsx --fix"
        ]
    },
    "keywords": [
        "next.js",
        "typescript"
    ],
    "author": "Kotaro Chiba",
    "license": "MIT",
    "dependencies": {
        "@koa/router": "^9.0.1",
        "babel-plugin-module-resolver": "^4.0.0",
        "bunyan": "^1.8.12",
        "cross-env": "^7.0.2",
        "jwt-decode": "^2.2.0",
        "koa": "^2.12.1",
        "koa-helmet": "^5.2.0",
        "module-alias": "^2.2.2",
        "next": "^9.4.4",
        "next-redux-wrapper": "^6.0.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "redux": "^4.0.5",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.1.3",
        "universal-cookie": "^4.0.3"
    },
    "devDependencies": {
        "@testing-library/react": "^10.3.0",
        "@testing-library/react-hooks": "^3.3.0",
        "@types/bunyan": "^1.8.6",
        "@types/enzyme": "^3.10.5",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^26.0.0",
        "@types/jwt-decode": "^2.2.1",
        "@types/koa": "^2.11.3",
        "@types/koa-helmet": "^5.2.0",
        "@types/koa-router": "^7.4.1",
        "@types/koa__router": "^8.0.2",
        "@types/react": "^16.9.38",
        "@types/react-dom": "^16.9.8",
        "@types/react-redux": "^7.1.9",
        "@types/redux-logger": "^3.0.8",
        "@types/universal-cookie": "^2.2.0",
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "@typescript-eslint/typescript-estree": "^3.3.0",
        "babel-jest": "^26.0.1",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.0",
        "husky": "^4.2.5",
        "hygen": "^5.0.3",
        "jest": "^26.0.1",
        "jest-fetch-mock": "^3.0.3",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "redux-saga-test-plan": "^4.0.0-rc.3",
        "snapshot-diff": "^0.8.0",
        "ts-jest": "^26.1.0",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5"
    },
    "_moduleAliases": {
        "~": "src",
        "~pages": "pages"
    }
}
